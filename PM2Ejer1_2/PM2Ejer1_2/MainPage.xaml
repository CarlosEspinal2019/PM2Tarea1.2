<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2Ejer1_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tarea 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>

        <Entry Keyboard="Plain" Placeholder="Ingrese su Nombre" VerticalOptions="CenterAndExpand" x:Name="txtnombre" Margin="15"/>
        <Entry Keyboard="Plain" Placeholder="Ingrese sus Apellidos" VerticalOptions="CenterAndExpand" x:Name="txtapellidos" Margin="15"/>
        <Entry Keyboard="Numeric" Placeholder="Ingrese su Edad" VerticalOptions="CenterAndExpand" x:Name="txtedad" Margin="15"/>
        <Entry Keyboard="Plain" Placeholder="Ingrese su correo electronico" VerticalOptions="CenterAndExpand" x:Name="txtemail" Margin="15"/>
        <Button Text="Enviar informacion" x:Name="btnpagina" Clicked="btnpagina_Clicked" CornerRadius="15" Background="teal" TextColor="White" Margin="15" />
    </StackLayout>

</ContentPage>
